Console.WriteLine(ba2);
a2 = a2 / 2;
a1 = a1 - 10;
string sa2 = a2.ToString();
string sa1 = a1.ToString();
sa2 = a2.ToString();
sa1 = a1.ToString();
Console.WriteLine(sa2);
Console.WriteLine(sa1);

