// mission 5 

Console.WriteLine(" #hackerU Shop#");
Console.WriteLine("Please enter your choice, which product would you like to buy? ");
Console.WriteLine("-Milk ");
Console.WriteLine("-Chocolate ");
Console.WriteLine("-Apple ");


{
    string product2 = Console.ReadLine();
    if (product2 == "apple")
    {
        Console.WriteLine("thanks for buying an apple");
    }
    else if (product2 == "milk")
    {
        Console.WriteLine("thanks for buying milk");
    }
    else if (product2 == "chocolate")
    {
        Console.WriteLine("thanks for buying chocolate");
    }

}

//mission 6 

Console.WriteLine(" Please enter the year date");
string yearDate = Console.ReadLine();
int year = int.Parse(yearDate);
Console.WriteLine(" Please enter the Month "); 
string month = Console.ReadLine();
int month6 = int.Parse(month);
Console.WriteLine(" Please enter the day date ");
string day = Console.ReadLine();
int day6 = int.Parse(day);
Console.WriteLine(day6 + "/" + month6 + "/" + year);
Console.WriteLine(day6 + "." + month6 + "." + year);
Console.WriteLine(day6 + "-" + month6 + "-" + year);

// mission 7

